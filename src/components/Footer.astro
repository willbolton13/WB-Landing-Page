<style>
  .site-footer {
    background-color: var( --footer-color);
    color: var(--text-color);
    padding: 5rem 0 2rem 0;
    position: relative;
    text-align: center;
  }

  @media (min-width: 768px) {
    .site-footer {
      text-align: left;
    }
  }
  .whywaterbear {
    font-family: "Futura PT", sans-serif;
    text-transform: uppercase;
    font-size: 1.5rem;
    color: var(--text-color);
    margin-bottom: 1rem;
  }

  .back-to-top {
    position: absolute;
    top: 0;
    left: 50%;
    transform: translate(-50%, -50%);
    background-color: var(--accent-yellow);
    color: var(--button-text-color);
    padding: 10px 25px;
    border-radius: 3px;
    font-weight: 700;
    text-transform: uppercase;
    text-decoration: none;
    white-space: nowrap;
  }

  .footer-links, .footer-why-list {
    list-style: none;
    padding: 0;
    margin: 0;
    margin-top: -10px;
  }

  .footer-links {
    text-transform: uppercase;
    display: none;
  }

  @media (min-width: 768px) {
    .footer-links {
      display: block;
    }
  }

  .footer-links a {
    color: var(--text-color);
    text-decoration: none;
    font-weight: 700;
    font-size: 1.3rem;
    display: inline-block;
    padding: 0.2rem 0;
    transition: color 0.2s ease-in-out;
  }

  .footer-links a:hover {
    color: var(--accent-yellow);
  }

  .footer-why-list li {
    font-family: jost, sans-serif;
    font-size: 0.85rem;
    line-height: 1.5;
  }

  .footer-logo {
    max-width: 250px;
  }

  .social-icons a {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    width: 40px;
    height: 40px;
    background-color: #000;
    border-radius: 50%;
    text-decoration: none;
    margin: 0 5px;
    color: var(--text-color);
    font-size: 1rem;
  }

  .social-icons a i {
    color: var(--text-color);
  }

  .contact-info p {
    margin-bottom: 1rem;
    font-size: 0.8rem;
  }

  .contact-info a {
    color: var(--text-color);
  }
</style>