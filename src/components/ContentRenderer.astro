<script>
  import { animate } from "motion";

  // Setup mentor filter buttons (multi-select toggle)
  function setupMentorFilters() {
    const filterButtons = document.querySelectorAll('.mentor-filter-btn');
    const selectedCategories = new Set<string>();
    
    filterButtons.forEach(button => {
      button.addEventListener('click', () => {
        const category = button.dataset.mentorCategory;
        
        if (category === 'all') {
          selectedCategories.clear();
          filterButtons.forEach(btn => btn.classList.remove('active'));
          button.classList.add('active');
        } else {
          const allBtn = document.querySelector('.mentor-filter-btn[data-mentor-category="all"]');
          
          if (button.classList.contains('active')) {
            button.classList.remove('active');
            selectedCategories.delete(category);
            
            if (selectedCategories.size === 0) {
              allBtn?.classList.add('active');
            }
          } else {
            button.classList.add('active');
            selectedCategories.add(category);
            allBtn?.classList.remove('active');
          }
        }
        
        if (typeof window.filterMentors === 'function') {
          window.filterMentors(selectedCategories);
        }
        
        const visibleCards = document.querySelectorAll('.mentor-card-container:not(.hidden)');
        visibleCards.forEach((card, i) => {
          animate(card, 
            { opacity: [0, 1], scale: [0.95, 1] }, 
            { duration: 0.3, delay: i * 0.02 }
          );
        });
      });
    });
  }

  // Setup event filter buttons (single-select)
  function setupEventFilters() {
    const filterButtons = document.querySelectorAll('.event-filter-btn');
    const eventItems = document.querySelectorAll('.event-grid-item');
    
    filterButtons.forEach(button => {
      button.addEventListener('click', () => {
        // Remove active from all buttons
        filterButtons.forEach(btn => btn.classList.remove('active'));
        button.classList.add('active');
        
        const category = button.dataset.eventCategory;
        
        // Filter event items
        eventItems.forEach(item => {
          const itemCategory = item.getAttribute('data-event-category');
          
          if (category === 'all' || itemCategory === category) {
            item.classList.remove('hidden');
            item.style.display = '';
            const container = item.querySelector('.event-card-container');
            if (container) {
              animate(container, 
                { opacity: [0, 1], scale: [0.95, 1] }, 
                { duration: 0.3 }
              );
            }
          } else {
            item.classList.add('hidden');
            item.style.display = 'none';
          }
        });
      });
    });
  }

  document.addEventListener('astro:page-load', () => {
    setupMentorFilters();
    setupEventFilters();
  });
</script>