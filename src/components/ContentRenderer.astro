// components/ContentRenderer.astro
import StaticPortalCards from './StaticPortalCards.astro';
import EventCard from './EventCard.astro';
import MentorCard from '../components/MentorCard.astro';
import { 
  findIncludedEntry, 
  findIncludedAsset
} from '../lib/contentful';
import { documentToHtmlString } from '@contentful/rich-text-html-renderer';

export interface Props {
  item: any;
  includes: any;
  index: number;
  eventData?: any; // Pre-fetched events for event lists
  mentorData?: any; // Pre-fetched mentors for mentor lists
}

const { item, includes, index, eventData, mentorData } = Astro.props;

// Determine content type
const contentType = item?.sys?.contentType?.sys?.id || 'unknown';

const mentorCategories = mentorData ? 
  [...new Set(mentorData.flatMap(m => m.fields.mentorCategories || []))].sort() : [];

// Event-related data processing
let filteredEventData = eventData || [];
let availableCategories = [];
let featuredEvent = null;
let regularEvents = [];

if (contentType === 'eventList' && eventData) {
  // Pre-filter events by eventCategories if specified in EventList config
  const configCategories = item.fields.eventCategories || [];
  
  if (configCategories.length > 0) {
    // Filter events to only those matching the configured categories
    filteredEventData = eventData.filter(event => 
      configCategories.includes(event.fields.eventCategory)
    );
  } else {
    filteredEventData = eventData;
  }
  
  // Extract unique categories from the filtered events for filter buttons
  availableCategories = [...new Set(filteredEventData.map(e => e.fields.eventCategory).filter(Boolean))].sort();
  
  // Find featured event from filtered data
  const now = new Date();
  const upcomingFeatured = filteredEventData
    .filter(event => {
      const eventDate = new Date(event.fields.eventDate);
      const isFeatured = event.fields.isFeatured === true || 
                        event.fields.featured === true;
      return eventDate >= now && isFeatured;
    })
    .sort((a, b) => {
      const dateA = new Date(a.fields.eventDate).getTime();
      const dateB = new Date(b.fields.eventDate).getTime();
      return dateA - dateB;
    });
  
  if (upcomingFeatured.length > 0) {
    featuredEvent = upcomingFeatured[0];
    // Remove featured event from regular events list
    regularEvents = filteredEventData.filter(event => event.sys.id !== featuredEvent.sys.id);
  } else {
    regularEvents = filteredEventData;
  }
}

