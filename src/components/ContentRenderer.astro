/* --- Rich Text Table Styling --- */
  
  /* Use :global() to target HTML injected by the rich text renderer */
  .text-content :global(table) {
    width: 100%;
    border-collapse: collapse; /* Ensures borders touch */
    margin: 1.5rem 0;
    font-size: 0.95rem;
  }

  /* Table Headers */
  .text-content :global(th) {
    font-family: "Futura PT", sans-serif;
    font-weight: 700; /* Bold Headers */
    text-transform: uppercase;
    padding: 1rem 0.5rem;
    border-bottom: 2px solid #000; /* Strong divider under headers */
    vertical-align: bottom;
  }

  /* Table Cells */
  .text-content :global(td) {
    padding: 0.75rem 0.5rem;
    border-bottom: 1px solid #dee2e6; /* Clean grey divider lines */
    vertical-align: middle;
    font-weight: 400 !important; /* FORCE normal weight (Fixes the "All Bold" issue) */
  }

  /* Optional: Striped rows for readability */
  .text-content :global(tr:nth-child(even)) {
    background-color: rgba(0, 0, 0, 0.02);
  }

  /* Mobile responsiveness for tables */
  @media (max-width: 768px) {
    .text-content :global(table) {
      display: block;
      overflow-x: auto; /* Horizontal scroll on phone */
      white-space: nowrap;
    }
  }

